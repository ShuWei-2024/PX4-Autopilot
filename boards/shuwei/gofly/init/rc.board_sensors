#!/bin/sh
#
# board specific sensors init
#------------------------------------------------------------------------------

board_adc start

# External SPI bus bmi270

bmi270 -s -b 4 -R 2 start

# Internal SPI bus ICM-42688P
icm42688p -s -b 4 -R 2 start

# Internal baro
dps310 -I start -a 118

# External mag
if ! qmc5883l -X start -a 13
then
	ist8310 -I -R 2 start
fi

# SPI3
rm3100 -s -b 2 start

#osd
atxxxx -s start

